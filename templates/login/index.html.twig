{# templates/login/index.html.twig #}
{% extends 'base_sin_navbar.html.twig' %}

{# ... #}
{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="card shadow-lg border-0 rounded-4 p-5" style="max-width: 500px; width: 100%;">
            <h3 class="text-center mb-4 fw-bold">Bienvenido</h3>
            <form action="{{ path('login') }}" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Correo electrónico</label>
                    <input type="email" id="username" name="_username" class="form-control rounded-3" value="{{ last_username }}" required>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" id="password" name="_password" class="form-control rounded-3" required>
                </div>

                <input type="hidden" name="_target_path" value="/afertlogin">

                <div class="d-grid mb-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">Iniciar sesión</button>
                </div>

            </form>
        </div>
    </div>



{% endblock %}